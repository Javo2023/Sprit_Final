<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">


    <Button
        android:id="@+id/buttonCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enviar mensaje por correo"
        app:layout_constraintEnd_toEndOf="@+id/editTextText2"
        app:layout_constraintStart_toStartOf="@+id/editTextText2"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <Button
        android:id="@+id/buttonLinkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil Linkedin"
        app:layout_constraintEnd_toEndOf="@+id/buttonCorreo"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/buttonCorreo"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/buttonWhatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contactar por Whatsapp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLinkedin"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/buttonLinkedin"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#144EF4"
        android:paddingTop="20dp"
        android:text="Acerca de Martin"
        android:textAlignment="center"
        android:textColor="#FAF9F9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonCorreo"
        app:layout_constraintStart_toStartOf="@+id/buttonCorreo"
        app:layout_constraintTop_toBottomOf="@+id/buttonCorreo"
        app:srcCompat="@drawable/linkedin" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="89dp"
        android:layout_height="77dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLinkedin"
        app:layout_constraintStart_toStartOf="@+id/buttonLinkedin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLinkedin"
        app:srcCompat="@drawable/what" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="message"
        android:inputType="text"
        android:paddingTop="35dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:paddingBottom="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>