<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EAE7E7"
        android:backgroundTint="#CAC9C9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Psicólogo con diplomado en Gestión de Personas y DO.  Profesional con experiencia en Atracción y Gestión del Talento, Desarrollo Organizacional y promoción del bienestar y felicidad en  el entorno laboral."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="214dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="174dp"
        android:layout_height="183dp"
        app:srcCompat="@drawable/martin"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="14dp" />

    <Button
        android:id="@+id/secondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver mas sobre Martín"
        tools:layout_editor_absoluteX="529dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#434242"
        android:backgroundTint="#8995DA"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Años de experiencia : 5"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D87D60"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Nivel de Motivacion :  Alatamente comprometido"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>